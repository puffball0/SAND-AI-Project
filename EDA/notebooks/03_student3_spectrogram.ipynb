        try:
            # Check for Excel file
            possible_excel_files = [
                'sand_task_1.xlsx',
                'sand_task_1.XLSX',
                'task1.xlsx',
                'data.xlsx'
            ]
            
            for excel_name in possible_excel_files:
                test_path = os.path.join(base_path, excel_name)
                if os.path.exists(test_path):
                    excel_file = test_path
